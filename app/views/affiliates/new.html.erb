<h1>New Affiliate</h1>
<%= form_with model: @affiliate, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :stake %>
    <%= form.number_field :stake, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'Back', affiliates_path, class: 'btn btn-secondary' %>
