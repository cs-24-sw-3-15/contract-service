<h1>Approve Contract</h1>

<%= form_with model: @contract, url: approve_path(@contract), method: :patch, local: true, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :start_date, class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :end_date, class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :label %>
    <%= f.select :label_id, @labels, { include_blank: 'None' }, class: 'form-select' %>
  </div>

  <!-- add fields for supplier_id and affiliate_id -->
  <div class="mb-3">
    <%= f.label :supplier_id, class: "form-label" %>
    <%= f.collection_select :supplier_id, @suppliers.all, :id, :name, { prompt: "Select Supplier" }, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :affiliate_id, class: "form-label" %>
    <%= f.collection_select :affiliate_id, @affiliates.all, :id, :name, { prompt: "Select Affiliate" }, class: "form-control" %>
  </div>


  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :documents, class: "form-label" %>
    <ul>
      <%= f.fields_for :documents do |document| %>
        <li>
          <%= link_to url_for(document.object.file) do %>
            <%= document.object.title %>
            <br>
            <% if document.object.file.representable? %>
              <%= image_tag url_for(document.object.file.preview(resize_to_limit: [320, 240]).processed), class: "img-thumbnail mt-2" %>
            <% else %>
              View
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mb-3">
    <%= f.submit "Approve", class: "btn btn-primary", data: { turbo_confirm: "Are you sure you want to approve this contract?" } %>
  </div>
<% end %>
