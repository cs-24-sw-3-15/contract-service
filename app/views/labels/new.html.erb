<h1>New Label</h1>
<%= form_with model: @label, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :parent %>
    <%= form.select :parent_id, @labels, { include_blank: 'None' }, class: 'form-select' %>
  </div>
  <div class="form-group">
    <%= form.label :identifier %>
    <%= form.text_field :identifier, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :color %>
    <%= form.color_field :color, class: 'form-control form-control-color' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Create Label', class: 'btn btn-primary' %>
  </div>
<% end %>
